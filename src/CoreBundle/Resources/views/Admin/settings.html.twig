{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ url('sonata_admin_dashboard') }}">{% trans %}breadcrumb.link_dashboard{% endtrans %}</a></li>
    <li class="active">{{ 'settings.header'|trans({}, form.vars.translation_domain) }}</li>
{% endblock %}

{% block content %}
    <div class="sonata-ba-form">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">

                    <div class="box-header">
                        <h4 class="box-title">
                            {{ 'settings.header'|trans({}, form.vars.translation_domain) }}
                        </h4>
                    </div>

                    <div class="box-body settings-form">
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_start(form, {'attr': {'class': ''}}) }}

                                {{ form_widget(form) }}

                                <div class="well well-small form-actions">
                                    <input type="submit" value="{{ 'settings.save_button.label'|trans({}) }}" class="btn btn-success">
                                </div>

                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}