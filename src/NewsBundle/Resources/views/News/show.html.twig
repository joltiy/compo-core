<div class="">


    {% block breadcrumb %}
        {{ sonata_block_render_event('breadcrumb', { 'context': 'news', 'news': news }) }}
    {% endblock %}


    <div class="row">
        <div class="col-lg-12">

            <div class="articles-item news-item" itemscope="" itemtype="http://schema.org/BlogPosting">

                {% block header %}
                    <div class="header-block">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="page-header">
                                    <h1 itemprop="headline">{% block header_text %}{{ news.name }}{% endblock %}</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endblock %}


                <div class="photo">
                    <img itemprop="image" src="{% path news.image, 'small' %}" width="200" class="thumbnail pull-right" alt="{{ news.name }}">
                </div>

                <div class="date pull-left">{{ news.publicationAt|date("d.m.Y") }}</div>

                <meta itemprop="datePublished" content="{{ news.publicationAt|date("ATOM") }}">

                <div itemprop="description" style="display: none">
                    {{ news.description|raw }}
                </div>

                <div itemprop="newsBody" class="text">
                    {{ news.body|raw }}


                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="back-to-list clearfix">
                <a class="btn btn-default pull-right" href="{{ path('compo_news_index') }}">К списку новостей</a>
            </div>
        </div>
    </div>

</div>


