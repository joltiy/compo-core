{% form_theme form '@AngularForm/form_theme.html.twig' %}

<div class="product_want_lower_cost">


    <a href="#" class="btn goods-card__buy-button" data-toggle="modal" data-target="#product_want_lower_cost">
        Хочу дешевле
    </a>

    <div id="product_want_lower_cost" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Хочу дешевле</h3>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-lg-12" data-ng-bind-html-unsafe="formResponse" data-ng-controller="FeedbackFormController as feedback" data-ng-cloak>

                            <div class="alert alert-success" role="alert" data-ng-show="feedback.showsuccess">Спасибо! Ваш запрос успешно отправлен</div>
                            <div class="alert alert-danger" role="alert" data-ng-show="feedback.showerror">При отправке запроса возникли ошибки. Обновите страницу и попробуйте еще раз.</div>


                            <form class="contacts__form" name="feedbackForm" data-ng-if="!feedback.sent">

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="drawing-order__flex-wrap">
                                            {{ form_row(form.product,{ "label_attr": {"class":"drawing-order__label-text"} , 'attr' : {"validator" : "required","class" : "drawing-order__input-text","data-ng-model":"feedback.form.product","data-ng-init":"feedback.form.product='"~form.product.vars.value~"'"  }}  ) }}
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="drawing-order__flex-wrap">
                                            {{ form_row(form.quantity,{ "label_attr": {"class":"drawing-order__label-text"} , 'attr' : {"validator" : "required","class" : "drawing-order__input-text" ,"data-ng-model":"feedback.form.quantity" }}  ) }}
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="drawing-order__flex-wrap">
                                            {{ form_row(form.name,{ "label_attr": {"class":"drawing-order__label-text"} , 'attr' : {"validator" : "required","class" : "drawing-order__input-text","data-ng-model":"feedback.form.name"  }}  ) }}
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="drawing-order__flex-wrap">
                                            {{ form_row(form.phone,{ "label_attr": {"class":"drawing-order__label-text"} , 'attr' : {"validator" : "required","data-ng-phone-mask":"", "class" : "drawing-order__input-text" ,"data-ng-model":"feedback.form.phone" }}  ) }}
                                        </div>
                                    </div>

                                </div>

                                <div class="drawing-order__flex-wrap different">
                                    {{ form_row(form.message,{ "label_attr": {"class":"drawing-order__label-text"} , 'attr' : {"class" : "drawing-order__textarea" ,"data-ng-model":"feedback.form.message"  }}  ) }}
                                </div>

                                <input type="submit" validation-submit="feedbackForm" value="Отправить" data-ng-disabled="feedback.disablesubmit" data-ng-click="feedback.send()" class="drawing-order__input-submit pull-right">

                                {{ form_row(form.product_id, { 'attr' : {"data-ng-model":"feedback.form.product_id", "data-ng-init":"feedback.form.product_id='"~form.product_id.vars.value~"'"  }}  ) }}
                                {{ form_row(form.product_url, { 'attr' : {"data-ng-model":"feedback.form.product_url", "data-ng-init":"feedback.form.product_url='"~form.product_url.vars.value~"'"  }}  ) }}

                                {{ form_row(form.type, { 'attr' : {"data-ng-model":"feedback.form.type", "data-ng-init":"feedback.form.type='"~form.type.vars.value~"'"  }}  ) }}
                                {{ form_row(form.page, { 'attr' : {"data-ng-model":"feedback.form.page", "data-ng-init":"feedback.form.page='"~form.page.vars.value~"'"  }}  ) }}
                                {{ form_row(form._token, { 'attr' : {"data-ng-model":"feedback.form._token", "data-ng-init":"feedback.form._token='"~form._token.vars.value~"'"  }}  ) }}

                            </form>


                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

</div>

