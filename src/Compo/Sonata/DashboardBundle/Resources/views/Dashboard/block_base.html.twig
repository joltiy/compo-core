<div class="box box-primary">
    <div class="box-header with-border">
        <h4 class="box-title">
            {% if url and url != '' %}
                <a href="{{ url }}">{{ block.name }}</a>
            {% else %}
                {{ block.name }}
            {% endif %}
        </h4>
    </div>
    <div class="box-body">
        {% block content %}
        {% endblock %}
    </div>
</div>
