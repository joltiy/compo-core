{% extends base_template %}

{% block title %}
    {% if admin.id(object) is not null and admin.isChild() %}
        {% set title_edit = "tab_menu.title_" ~ admin.getParent().label ~ '_' ~ admin.label ~ '_edit' %}
        {{ title_edit|trans({'%name%': admin.subject}, admin.translationDomain) }}
    {% elseif admin.id(object) is not null %}
        {% set title_edit = "tab_menu.title_" ~ admin.label ~ '_edit' %}
        {{ title_edit|trans({'%name%': admin.subject }, admin.translationDomain) }}
    {% else %}
        {% set title_create = "tab_menu.title_" ~ admin.label ~ '_create' %}
        {{ title_create|trans({}, admin.translationDomain) }}
    {% endif %}
{% endblock %}

{% block navbar_title %}
    {{ block('title') }}
{% endblock %}

{%- block actions -%}
    {% include 'SonataAdminBundle:CRUD:action_buttons.html.twig' %}
{%- endblock -%}

{% block tab_menu %}{{ knp_menu_render(admin.sidemenu(action), {'currentClass' : 'active', 'template': sonata_admin.adminPool.getTemplate('tab_menu_template')}, 'twig') }}{% endblock %}

{% use 'SonataAdminBundle:CRUD:base_edit_form.html.twig' with form as parentForm %}

{% block form %}
    {{ block('parentForm') }}
{% endblock %}
