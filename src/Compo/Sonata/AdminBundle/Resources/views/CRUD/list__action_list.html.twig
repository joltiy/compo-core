    <a href="{{ admin.generateUrl(actions.route, {id: object.id}) }}" class="btn btn-sm btn-default edit_link"
       title="{{ 'action_list'|trans({}, 'SonataAdminBundle') }}">
        <i class="fa fa-list"></i>
    </a>
{% endif %}