{% if object is defined %}
    {% if app.user and object.username != app.user.username and sonata_user.impersonating %}
        <a class="btn btn-sm btn-default"
           href="{{ url(sonata_user.impersonating.route, sonata_user.impersonating.parameters | merge({'_switch_user': object.username})) }}"
           title="{{ 'switch_user'|trans({}, 'SonataUserBundle')}}"
        >
            <i class="glyphicon glyphicon-user"></i><i class="glyphicon glyphicon-log-in"></i>
        </a>
    {% endif %}
{% endif %}
