{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="row">
        <div class="col-lg-12">
            <div class="advantages">

                <div class="buttons row">
                    {% for item in list %}
                        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">
                            <button type="button" class="btn btn-default task" data-target-tab="advantages-tab-{{ item.id }}" data-toggle="modal" data-target="#advantages-modal">
                                <span class="image-icon" style="width: 100px;text-align: center;">
                                    <img alt="" src="{% path item.image, 'reference' %}" style="    width: 32px;"/>
                                </span>
                                <span class="title"><span>{{ item.name }}</span></span>
                            </button>
                        </div>
                    {% endfor %}
                </div>

                <div class="modal fade" id="advantages-modal" tabindex="-1" role="dialog">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>

                                    <ul class="nav nav-tabs nav-justified" role="tablist">
                                        {% for item in list %}
                                            <li role="presentation" class="active">
                                                <a href="#advantages-tab-{{ item.id }}" class="" data-toggle="tab">
                                                    <div class="image-icon" style="width: 100px; text-align: center;">
                                                        <img alt="" src="{% path item.image, 'reference' %}" style="width: 100px;"/>
                                                    </div>
                                                    <span class="title"><span>{{ item.name }}</span></span>
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>

                                    <div class="tab-content">
                                        {% for item in list %}
                                            <div role="tabpanel" class="tab-pane active" id="advantages-tab-{{ item.id }}">
                                                <div class="ppopup-title h4 text-uppercase">{{ item.name }}</div>
                                                {{ item.description|raw }}
                                            </div>
                                        {% endfor %}
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}