{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="banners banners-carousel">
        <div class="carousel slide" data-ride="carousel" id="carousel-example-generic-{{ block.id }}-{{ settings.id }}">

            <ol class="carousel-indicators">
                {% for item in list %}
                    <li data-target="#carousel-example-generic-{{ block.id }}-{{ settings.id }}" data-slide-to="{{ loop.index }}" class="{% if loop.first %}active{% endif %}"></li>
                {% endfor %}
            </ol>

            <div class="carousel-inner" role="listbox">
                {% for item in list %}
                    <div class="item {% if loop.first %}active{% endif %}">
                        {% if item.url %}
                            <a href="{{ item.url }}"><img alt="{{ item.title|default(item.name) }}" src="{% path item.image, 'reference' %}"/></a>
                        {% else %}
                            <img alt="{{ item.title|default(item.name) }}" src="{% path item.image, 'reference' %}"/>
                        {% endif %}

                        <div class="carousel-caption">
                            <h3>{{ item.name }}</h3>
                            <div>{{ item.description }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic-{{ block.id }}-{{ settings.id }}" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic-{{ block.id }}-{{ settings.id }}" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
{% endblock %}
