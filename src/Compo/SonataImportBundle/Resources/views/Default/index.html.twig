{% extends base_template %}

{%- block actions -%}
    {% include 'SonataAdminBundle:CRUD:action_buttons.html.twig' %}
{%- endblock -%}

{% block tab_menu %}{{ knp_menu_render(admin.sidemenu(action), {'currentClass' : 'active', 'template': sonata_admin.adminPool.getTemplate('tab_menu_template')}, 'twig') }}{% endblock %}

{% block navbar_title %}
    {% set title_batch = 'tab_menu.title_import' %}
    {{ title_batch|trans({"%name%": admin.label|trans({}, admin.translationDomain)}, admin.translationDomain) }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h4 class="box-title">
                                {{ 'index.h1'|trans({}, 'CompoSonataImportBundle') }}
                            </h4>
                        </div>
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields well">
                                {{ form(form) }}
                            </div>
                        </div>
                        <div class="box-header">
                            <h4>{{ 'index.h2'|trans({}, 'CompoSonataImportBundle') }}</h4>
                        </div>
                        <div class="box-body">
                        <table class="table">
                            <tr>
                                <th>
                                    {{ 'index.table.column'|trans({}, 'CompoSonataImportBundle') }}
                                </th>
                                <th>
                                    {{ 'index.table.name'|trans({}, 'CompoSonataImportBundle') }}
                                </th>
                            </tr>
                            {% for key, i in builder %}
                                <tr>
                                    <td>
                                        {{ key }}
                                    </td>
                                    <td>
                                        {{ admin.translationLabel(i, 'list', 'label')|trans({}, admin.translationDomain) }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
