{% block content %}
    <div class="content-block articles-index">

        <div class="row">
            <div class="col-lg-12">

                {% block news_article %}
                    <div itemscope itemtype="http://schema.org/NewsArticle" class="articles-item">

                        {% block main_entity_of_page %}
                            <meta itemscope itemprop="mainEntityOfPage" itemtype="https://schema.org/WebPage" itemid="https://google.com/article"/>
                        {% endblock %}

                        {% block publisher %}
                            <div itemscope itemprop="publisher" itemtype="https://schema.org/Organization" class="hidden">
                                <meta itemprop="name" content="Сайт «Комсомольской правды»"/>

                                <div itemscope itemprop="logo" itemtype="https://schema.org/ImageObject">
                                    <meta itemprop="url" content="http://kp.ru/img/kp-logo-ru-h.jpg"/>
                                    <meta itemprop="width" content="264"/>
                                    <meta itemprop="height" content="59"/>

                                    <img alt="Комсомольская правда" src="http://kp.ru/img/kp-logo-ru-h.jpg"/>
                                </div>
                            </div>
                        {% endblock %}

                        {% block author %}
                            <div itemscope itemprop="author" itemtype="https://schema.org/Person" class="hidden">
                                <div itemprop="name">John Doe</div>
                            </div>
                        {% endblock %}

                        {% block headline %}
                            <h1 itemprop="headline">
                                {{ compo_seo_header() }}
                            </h1>
                        {% endblock %}

                        {% block image %}
                            <div itemscope itemtype="https://schema.org/ImageObject" itemprop="image" class="photo">
                                <meta itemprop="url" content="//s11.stc.all.kpcdn.net/share/i/12/9989474/">
                                <meta itemprop="width" content="960">
                                <meta itemprop="height" content="640">

                                <img src="{% path article.image, 'small' %}" width="200" class="thumbnail pull-right" alt="{{ article.name }}">
                            </div>
                        {% endblock %}

                        {% block date_published %}
                            <time itemprop="datePublished" datetime="{{ article.publicationAt|date("Y-m-d\TH:i:sP") }}" class="date pull-left">{{ article.publicationAt|date("d.m.Y") }}</time>
                        {% endblock %}

                        {% block date_modified %}
                            <meta itemprop="dateModified" content="{{ article.updatedAt|date("Y-m-d\TH:i:sP") }}"/>
                        {% endblock %}

                        <div class="text">
                            {% block description %}
                                <div itemprop="description">
                                    {{ article.description|raw }}
                                </div>
                            {% endblock %}

                            {% block article_body %}
                                <div itemprop="articleBody">
                                    {{ article.body|raw }}
                                </div>
                            {% endblock %}
                        </div>
                    </div>
                {% endblock %}

            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                <div class="back-to-list clearfix">
                    {% block back_to_list %}
                        <a class="btn btn-default pull-right" href="{{ path('compo_articles_index') }}">К списку статей</a>
                    {% endblock %}
                </div>

            </div>
        </div>

    </div>
{% endblock %}