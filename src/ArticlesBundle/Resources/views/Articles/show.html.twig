<div class="">
    {% block breadcrumb %}
        {{ sonata_block_render_event('breadcrumb', { 'context': 'articles', 'article': article }) }}
    {% endblock %}

    <div class="row">
        <div class="col-lg-12">

            <div class="articles-item" itemscope="" itemtype="http://schema.org/BlogPosting">

                {% block header %}
                    <div class="header-block">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="page-header">
                                    <h1 itemprop="headline">{{ compo_seo_header() }}</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endblock %}

                <div class="photo">
                    <img itemprop="image" src="{% path article.image, 'small' %}" width="200" class="thumbnail pull-right" alt="{{ article.name }}">
                </div>

                <div class="date pull-left">{{ article.publicationAt|date("d.m.Y") }}</div>

                <meta itemprop="datePublished" content="{{ article.publicationAt|date("ATOM") }}">

                <div itemprop="description" style="display: none">
                    {{ article.description|raw }}
                </div>

                <div itemprop="articleBody" class="text">
                    {{ article.body|raw }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="back-to-list clearfix">
                <a class="btn btn-default pull-right" href="{{ path('compo_articles_index') }}">К списку статей</a>
            </div>
        </div>
    </div>
</div>


