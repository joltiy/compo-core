{% if admin.getClass() == 'Compo\\Sonata\\MediaBundle\\Entity\\Media' %}
    {% if object and admin.hasRoute('edit') and admin.isGranted('EDIT') and object.providerName == 'sonata.media.provider.image' %}
        <span class="inner-field-short-description inner-field-short-description-media">
            <a href="{{ admin.generateObjectUrl('edit', object, link_parameters) }}" target="new">
                {% thumbnail object, 'medium' %}
            </a>
        </span>

        <span class="inner-field-short-description">
            <a href="{{ admin.generateObjectUrl('edit', object, link_parameters) }}" target="new" class="media-description">
                <div class="media-description-text">
                    {{ description }}
                </div>
            </a>
        </span>

    {% else %}
        {{ description }}
    {% endif %}


{% else %}
    <span class="inner-field-short-description inner-field-short-description-media">
        {% if object and admin.hasRoute('edit') and admin.isGranted('EDIT') %}
            <a href="{{ admin.generateObjectUrl('edit', object, link_parameters) }}" target="new">{{ description }}</a>
        {% else %}
            {{ description }}
        {% endif %}
    </span>
{% endif %}