{% extends '@SonataAdmin/CRUD/base_edit.html.twig' %}

{% block title %}
    {% if admin.id(object) is not null and admin.isChild() %}
        {% set title_edit = "title_edit_" ~ admin.getParent().label ~ '_' ~ admin.label %}
        {{ title_edit|trans({'%name%': admin.subject}, admin.translationDomain) }}
    {% elseif admin.id(object) is not null %}
        {% set title_edit = "title_edit_" ~ admin.label %}
        {{ title_edit|trans({'%name%': admin.subject }, admin.translationDomain) }}
    {% else %}
        {{ "title_create"|trans({}, admin.translationDomain) }}
    {% endif %}
{% endblock %}

{% block navbar_title %}
    {{ block('title') }}
{% endblock %}